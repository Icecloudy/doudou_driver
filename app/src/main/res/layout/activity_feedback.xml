<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray"
    android:orientation="vertical"
    tools:context="com.doudou.driver.ui.profile.settings.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/white"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editFeedbackContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:background="@null"
            android:hint="@string/feedback_tips"
            android:layout_gravity="left"
            android:layout_margin="15dp"
            />
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submit"
        style="@style/Button.Primary"
        android:layout_marginLeft="@dimen/padding_edge_common"
        android:layout_marginRight="@dimen/padding_edge_common"
        android:layout_marginTop="48dp"
        android:text="@string/submit_feedback"
        android:textColor="@color/white" />

</LinearLayout>
