<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <com.doudou.driver.view.RoundAngleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/padding_edge_common"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_head"
        app:roundHeight="20dp"
        app:roundWidth="20dp" />

    <RatingBar
        android:id="@+id/mRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/profile_image" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mRatingBar"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/profile_image"/>

    <TextView
        android:id="@+id/userOpinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRatingBar"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/profile_image"
        android:maxEms="18"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_hint" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_edge_common" />

    <View
        style="@style/LineEdge"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
